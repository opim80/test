local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
local SaveManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/Addons/SaveManager.lua"))()
local InterfaceManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/Addons/InterfaceManager.lua"))()

-- Services
local HttpService = game:GetService("HttpService")
local TeleportService = game:GetService("TeleportService")

-- Constants
local MESH_ID_TARGET = "12439777368" -- We will use string matching to be safe
local SERVER_LOG_FILE = "fluent_server_history.json"

-- State Variables
local webhookURL = ""
local webhookEnabled = false
local isInitialized = false 

-- Helper: Find Devil Heart
local function findDevilHeart()
    -- We search through the map or workspace for the mesh
    for _, v in ipairs(workspace:GetDescendants()) do
        if v:IsA("MeshPart") and v.MeshId:find(MESH_ID_TARGET) then
            -- Requirements: MeshId matches and has a PointLight child
            if v:FindFirstChildOfClass("PointLight") then
                return v
            end
        end
    end
    return nil
end

-- Helper: Send Discord Webhook
local function sendWebhook(title, message, color)
    if webhookURL ~= "" and webhookURL:find("discord.com/api/webhooks") then
        local data = {
            ["embeds"] = {{
                ["title"] = title,
                ["description"] = message,
                ["color"] = color or 0x00ff00,
                ["timestamp"] = DateTime.now():ToIsoDate()
            }}
        }
        local success = pcall(function()
            request({
                Url = webhookURL,
                Method = "POST",
                Headers = {["Content-Type"] = "application/json"},
                Body = HttpService:JSONEncode(data)
            })
        end)
        return success
    end
    return false
end

-- Helper: Server History
local function getHistory()
    if isfile(SERVER_LOG_FILE) then
        local success, data = pcall(function() return HttpService:JSONDecode(readfile(SERVER_LOG_FILE)) end)
        return success and data or {}
    end
    return {}
end

local function serverHop()
    local history = getHistory()
    history[game.JobId] = os.time()
    writefile(SERVER_LOG_FILE, HttpService:JSONEncode(history))

    local success, result = pcall(function()
        return HttpService:JSONDecode(game:HttpGet("https://games.roblox.com/v1/games/" .. game.PlaceId .. "/servers/Public?sortOrder=Asc&limit=100"))
    end)

    if success and result and result.data then
        for _, server in ipairs(result.data) do
            if server.playing < server.maxPlayers and not history[server.id] and server.id ~= game.JobId then
                TeleportService:TeleportToPlaceInstance(game.PlaceId, server.id)
                return
            end
        end
    end
    Fluent:Notify({Title = "Hopper", Content = "No new servers found. Retrying...", Duration = 3})
end

-- [[ LOOP FUNCTION ]]
local function startHopperLoop()
    task.spawn(function()
        while Fluent.Options.HopperToggle.Value do
            local heart = findDevilHeart()

            if heart then
                if webhookEnabled then
                    sendWebhook("✅ Devil Heart Found!", "Found in server: " .. game.JobId)
                end
                Fluent:Notify({Title = "Success", Content = "Devil Heart Found! Hopping stopped.", Duration = 10})
                Fluent.Options.HopperToggle:SetValue(false)
                break
            else
                serverHop()
            end
            task.wait(10)
        end
    end)
end

-- Create Window
local Window = Fluent:CreateWindow({
    Title = "Premium Server Utility",
    SubTitle = "Devil Heart Hunter",
    TabWidth = 160,
    Size = UDim2.fromOffset(580, 460),
    Acrylic = true, 
    Theme = "Dark",
    MinimizeKey = Enum.KeyCode.LeftControl
})

local Tabs = {
    Automation = Window:AddTab({ Title = "Automation", Icon = "play" }),
    Settings = Window:AddTab({ Title = "Config & Webhooks", Icon = "settings" })
}

-- [[ AUTOMATION TAB ]]
local HopperToggle = Tabs.Automation:AddToggle("HopperToggle", {Title = "Server Hopper (Devil Heart)", Default = false })

Tabs.Automation:AddButton({
    Title = "Start Hopper",
    Description = "Manually begin the search loop",
    Callback = function()
        if HopperToggle.Value then
            startHopperLoop()
            Fluent:Notify({Title = "Hopper", Content = "Search started...", Duration = 3})
        else
            Fluent:Notify({Title = "Error", Content = "Enable the toggle above first!", Duration = 3})
        end
    end
})

Tabs.Automation:AddButton({
    Title = "Check for Devil Heart",
    Description = "Test if the item is in this server",
    Callback = function()
        local heart = findDevilHeart()
        if heart then
            Fluent:Notify({Title = "Detection", Content = "✅ Devil Heart IS in this server!", Duration = 5})
        else
            Fluent:Notify({Title = "Detection", Content = "❌ Devil Heart not found.", Duration = 5})
        end
    end
})

HopperToggle:OnChanged(function()
    if HopperToggle.Value and not isInitialized then
        startHopperLoop()
    end
end)

-- [[ CONFIG & WEBHOOK TAB ]]
Tabs.Settings:AddSection("Webhook Settings")

Tabs.Settings:AddInput("WebhookURL", {
    Title = "Webhook URL",
    Default = "",
    Callback = function(Value) webhookURL = Value end
})

Tabs.Settings:AddToggle("WebhookEnable", {Title = "Enable Webhook", Default = false }):OnChanged(function(Value)
    webhookEnabled = Value
end)

Tabs.Settings:AddButton({
    Title = "Test Webhook",
    Callback = function()
        local ok = sendWebhook("Test", "Webhook Active", 5793010)
        Fluent:Notify({Title = "Webhook", Content = ok and "Test Sent" or "Test Failed", Duration = 3})
    end
})

Tabs.Settings:AddSection("History Management")

Tabs.Settings:AddButton({
    Title = "Clear Server History",
    Description = "Deletes the log of visited servers",
    Callback = function()
        if isfile(SERVER_LOG_FILE) then
            delfile(SERVER_LOG_FILE)
            Fluent:Notify({Title = "Success", Content = "Server history cleared.", Duration = 3})
        end
    end
})

-- [[ CONFIG MANAGEMENT ]]
SaveManager:SetLibrary(Fluent)
InterfaceManager:SetLibrary(Fluent)
SaveManager:IgnoreThemeSettings()
SaveManager:SetIgnoreIndexes({"WebhookURL"}) 
InterfaceManager:BuildInterfaceSection(Tabs.Settings)
SaveManager:BuildConfigSection(Tabs.Settings)

Window:SelectTab(1)

-- Final Load
SaveManager:LoadAutoloadConfig()
task.wait(0.5)
isInitialized = true
