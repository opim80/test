local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
local SaveManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/SaveManager.lua"))()
local InterfaceManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/InterfaceManager.lua"))()

-- Services
local HttpService = game:GetService("HttpService")
local TeleportService = game:GetService("TeleportService")
local Players = game:GetService("Players")

-- Constants
local MESH_ID_TARGET = "rbxassetid://12439777368"
local LocalPlayer = Players.LocalPlayer
local NODE_SPACING = 5 -- Distance between pre-calculated points

-- Helper: Find Devil Heart
local function findDevilHeart()
    local map = workspace:FindFirstChild("map")
    local rokyos = map and map:FindFirstChild("Rokyo")
    if rokyos then
        for _, object in ipairs(rokyos:GetChildren()) do
            if object:IsA("MeshPart") and object.MeshId == MESH_ID_TARGET then
                if object:FindFirstChildOfClass("PointLight") then return object end
            end
        end
    end
    return nil
end

-- Deep Collision Checker
local function isAreaBlocked(pos)
    local mapFolder = workspace:FindFirstChild("map")
    if not mapFolder then return false end

    -- Define the player's physical space for the check
    local checkSize = Vector3.new(4, 6, 4) 
    local params = OverlapParams.new()
    params.FilterType = Enum.RaycastFilterType.Include
    
    -- We are specifically checking the contents of workspace.map
    local objectsToCheck = {}
    for _, model in ipairs(mapFolder:GetChildren()) do
        for _, child in ipairs(model:GetChildren()) do
            if child:IsA("BasePart") and child.CanCollide then
                table.insert(objectsToCheck, child)
            end
        end
    end
    params.FilterDescendantsInstances = objectsToCheck

    local collisions = workspace:GetPartBoundsInBox(CFrame.new(pos), checkSize, params)
    return #collisions > 0
end

-- Pre-Calculated Path Logic
local function calculateAndMove(targetPos)
    local character = LocalPlayer.Character
    local root = character and character:FindFirstChild("HumanoidRootPart")
    local humanoid = character and character:FindFirstChild("Humanoid")
    if not root or not humanoid then return end

    local startPos = root.Position
    local calculatedPath = {}
    local currentPos = startPos
    
    Fluent:Notify({Title = "System", Content = "Scanning workspace.map for collisions...", Duration = 3})

    -- Pre-calculate path points
    local fullDistance = (targetPos - startPos).Magnitude
    local steps = math.floor(fullDistance / NODE_SPACING)
    local direction = (targetPos - startPos).Unit

    for i = 1, steps do
        local nextPoint = startPos + (direction * (i * NODE_SPACING))
        
        -- If blocked, try to find a detour point (Left/Right/Up)
        if isAreaBlocked(nextPoint) then
            local detours = {
                nextPoint + Vector3.new(NODE_SPACING, 0, 0),
                nextPoint + Vector3.new(-NODE_SPACING, 0, 0),
                nextPoint + Vector3.new(0, NODE_SPACING, 0)
            }
            
            local foundDetour = false
            for _, detour in ipairs(detours) do
                if not isAreaBlocked(detour) then
                    nextPoint = detour
                    foundDetour = true
                    break
                end
            end
            
            -- If still blocked, this point remains at original (MoveTo will attempt to slide past)
        end
        table.insert(calculatedPath, nextPoint)
    end
    table.insert(calculatedPath, targetPos) -- Ensure final destination is included

    -- Visualization
    local visualFolder = workspace:FindFirstChild("CustomPathVisuals") or Instance.new("Folder", workspace)
    visualFolder.Name = "CustomPathVisuals"
    visualFolder:ClearAllChildren()

    for _, point in ipairs(calculatedPath) do
        local p = Instance.new("Part", visualFolder)
        p.Anchored, p.CanCollide, p.Size = true, false, Vector3.new(0.6, 0.6, 0.6)
        p.Shape, p.Material, p.Color = "Ball", "Neon", Color3.fromRGB(255, 255, 0)
        p.Position = point
    end

    -- Execution
    Fluent:Notify({Title = "Movement", Content = "Starting pre-calculated walk.", Duration = 3})
    for _, point in ipairs(calculatedPath) do
        humanoid:MoveTo(point)
        humanoid.MoveToFinished:Wait()
    end
    
    visualFolder:ClearAllChildren()
end

-- Create Window
local Window = Fluent:CreateWindow({
    Title = "Devil Heart Utility v5.1 (Deep Scan)",
    SubTitle = "Custom Map Collision Detection",
    TabWidth = 160,
    Size = UDim2.fromOffset(580, 460),
    Acrylic = true, 
    Theme = "Dark",
    MinimizeKey = Enum.KeyCode.LeftControl
})

local Tabs = {
    Automation = Window:AddTab({ Title = "Automation", Icon = "play" }),
    Settings = Window:AddTab({ Title = "Settings", Icon = "settings" })
}

-- [[ AUTOMATION TAB ]]
Tabs.Automation:AddSection("Custom Pathfinding")

Tabs.Automation:AddButton({
    Title = "Deep Scan & Walk",
    Description = "Checks children of models in workspace.map before moving",
    Callback = function()
        local heart = findDevilHeart()
        if heart then
            calculateAndMove(heart.Position)
        else
            Fluent:Notify({Title = "Error", Content = "Devil Heart not found in Rokyo.", Duration = 3})
        end
    end
})

-- [[ SETTINGS & INITIALIZATION ]]
SaveManager:SetLibrary(Fluent)
InterfaceManager:SetLibrary(Fluent)
InterfaceManager:BuildInterfaceSection(Tabs.Settings)
SaveManager:BuildConfigSection(Tabs.Settings)

Window:SelectTab(1)
SaveManager:LoadAutoloadConfig()
task.wait(0.5)
isInitialized = true
